{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node",
            "express",
            "mongoose"
        ]
    },
    "include": [
        "src/**/*",
        "server.ts",
        "scripts/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}